{
  "name": "@zomink/db",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "concurrently \"yarn db:generate\" \"yarn watch\"",
    "watch": "yarn with-env tsup --watch",
    "clean": "rm -rf .turbo node_modules",
    "db:generate": "yarn with-env prisma generate",
    "db:push": "yarn with-env prisma db push --skip-generate",
    "db:migrate": "yarn with-env prisma migrate dev --create-only --name \"$(date +%s)\"",
    "db:migrate:prod": "yarn with-env prisma migrate deploy --preview-feature",
    "db:studio": "yarn with-env prisma studio --port 5556",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "^4.15.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "dotenv-cli": "^7.2.1",
    "prisma": "^4.15.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.3"
  }
}
